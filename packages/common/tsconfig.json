{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": false,
    "declaration": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["src/**/*"]
}
