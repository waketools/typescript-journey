{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "rootDir": "./",
    "declaration": false,
    "composite": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules"]
}
